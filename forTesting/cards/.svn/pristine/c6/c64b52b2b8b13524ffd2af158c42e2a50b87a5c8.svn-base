                        </object>
                    </section>
                </section>
            </article>
            <section class="question-long-text" data-uuid="dc927bbc2f57440182582dbca6421c6a">
                <object type="text/html" data="../../assets/widgets/long_text_question/index.html" class="widget" data-uuid="a192830c0ac9494b9b64a56f0fb8926c">
                    <param name="configFile" value="../../widget_data/config/a192830c0ac9494b9b64a56f0fb8926c.json" />
