        <section class="historical-source nobg" data-uuid="7a65a269681c499295ad8cf62a3448b3">
            <article class="box gradient" data-uuid="60b5bd6ba6d34a088bfa681b28f07242">
                <div class="header-element" data-uuid="0429c23e1a7a469e899778a6b1cd7aa7">
