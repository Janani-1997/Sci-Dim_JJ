        <section class="historical-source nobg" data-uuid="183b984e0a4741e6a7f07d4718c2aa81">
            <article class="box gradient" data-uuid="f8db69acf80143e48977ed1717596b45">
                <div class="header-element" data-uuid="db401e7b06c4431dac910b1a0a21e6c4">
