{
    "__comment__": [
        "Standard place for content to configure Habitat. This makes it possible for content ",
        "to control the Habitat UI and refine it for particular uses. For example content ",
        "could control what patterns are available in the pattern picker, what class ",
        "groups can be added to content, etc. Currently, though, only our contextual ",
        "formatting options are in this file."
    ],

    "fileFormatVersion": 0.1,

    "contentButtons": {
        "figure,video,iframe,img,object,section": {
            "options": [{
                "title": "One-Half Left Aligned",
                "classes": ["one-half", "left"],
                "icon": "assets/template/images/contextual-menu-align-one-half-left.svg"
            }, {
                "title": "One-Half Right Aligned",
                "classes": ["one-half", "right"],
                "icon": "assets/template/images/contextual-menu-align-one-half-right.svg"

            }, {
                "title": "Full Bleed",
                "classes": ["full-bleed"],
                "icon": "assets/template/images/contextual-menu-align-full-bleed.svg"
            }]
        },

        "p,h1,h2,h3,h4,h5,h6,figcaption": {
            "options": [{
                "title": "Left Align",
                "classes": ["text-left"],
                "icon": "assets/template/images/contextual-menu-text-align-left.svg"
            }, {
                "title": "Center Align",
                "classes": ["text-center"],
                "icon": "assets/template/images/contextual-menu-text-align-center.svg"
            }, {
                "title": "Right Align",
                "classes": ["text-right"],
                "icon": "assets/template/images/contextual-menu-text-align-right.svg"
            }, {
                "title": "Justify",
                "classes": ["text-justify"],
                "icon": "assets/template/images/contextual-menu-text-justify.svg"
            }]
        }
    }
}