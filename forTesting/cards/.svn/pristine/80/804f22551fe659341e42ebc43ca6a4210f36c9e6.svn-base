            <object type="text/html" data="../../assets/widgets/long_text_question/index.html" class="widget" data-uuid="f2f5905b030f46f4bc51a3639b9871b1">
                <param name="configFile" value="../../widget_data/config/f2f5905b030f46f4bc51a3639b9871b1.json" />
