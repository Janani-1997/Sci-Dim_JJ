            <section class="question-multiple-choice" data-uuid="050c0dd3967b4cc19e3620254e84e8f6">
                <object type="text/html" data="../../assets/widgets/multiple_choice_question/index.html" class="widget" data-uuid="f7b8c29a23184c62ba5d3f4c44c5435b">
                    <param name="configFile" value="../../widget_data/config/f7b8c29a23184c62ba5d3f4c44c5435b.json" />
                </object>
