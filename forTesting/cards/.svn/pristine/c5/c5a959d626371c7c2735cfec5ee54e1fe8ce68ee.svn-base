        <section class="historical-source nobg" data-uuid="40ae9dfe2824421db973d9e4b56b936b">
            <article class="box gradient" data-uuid="0a6c2d2e6f2d47e1bff55fb759bd958f">
                <div class="header-element" data-uuid="f0e58a3e90d54512b9ad74d867134999">
