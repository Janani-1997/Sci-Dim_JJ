        <section class="question-multiple-choice" data-uuid="728b38bab3a3426483bb4a1056939187">
            <object type="text/html" data="../../assets/widgets/multiple_choice_question/index.html" class="widget" data-uuid="4afe986730b643b1980dae6f87ce1201">
