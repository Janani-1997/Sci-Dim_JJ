            <section class="question-long-text" data-uuid="24a987dba64a4f0d8992792ff8096c0e">
                <object type="text/html" data="../../assets/widgets/long_text_question/index.html" class="widget" data-uuid="19f0fdc2cdcf45c9a3c633c714940f3c">
