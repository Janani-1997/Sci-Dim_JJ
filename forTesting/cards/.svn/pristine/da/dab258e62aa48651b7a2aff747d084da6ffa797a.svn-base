        <section class="historical-source nobg" data-uuid="d6ec525f19af44e68e28dd87097302d7">
            <article class="box gradient" data-uuid="477ee3d74edf4ba0b2c4a6c5e74e607f">
                <div class="header-element" data-uuid="c5f1f950b60242eda3fd935e101a062c">
