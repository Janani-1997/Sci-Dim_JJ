            <section class="question-long-text" data-uuid="2f59451219864fda82bf4a0d022650b7">
                <object type="text/html" data="../../assets/widgets/long_text_question/index.html" class="widget" data-uuid="91f3febefe6943d4bff99b53d92c5f77">
                    <param name="configFile" value="../../widget_data/config/91f3febefe6943d4bff99b53d92c5f77.json" />
