        <section class="question-long-text" data-uuid="c96047c8058a4e70a93ad93e5ff8b38d">
            <object type="text/html" data="../../assets/widgets/long_text_question/index.html" class="widget" data-uuid="790ab2c5f01849359b93b1179ccf959e">
                <param name="configFile" value="../../widget_data/config/790ab2c5f01849359b93b1179ccf959e.json" />
