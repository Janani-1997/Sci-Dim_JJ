// Parallax Opener

.parallax-opener {
  h1 {font-family: $font-serif;margin-top: 10px;font-size: 2.9rem;line-height: 1.15;letter-spacing: 0.01em;font-weight: 600;} 
	h1, h2 {color: white;}
	h2 {margin-top: 50px;letter-spacing: 0.03em;font-size: 1.3rem;
	    line-height: 1.35;font-family: $font-sans;font-weight: 100;} 
	.img-caption { 
	  z-index: 5; 
	  position: absolute;
	  bottom: 0;
	  width: 100%;
	} 

	.img-caption p {
		position: relative;
		background-color: rgba(13, 47, 61,0.7);
		padding: 0.2em 1em;
		text-align: left;
		color: white;
		font-size: 0.8rem;
		width: 630px;
	}

	header {
	  box-sizing: border-box;
	  min-height: 45vw;
	  max-height: 50vw;
	  padding: 15vw 0 5vw;
	  position: relative;
	  -webkit-transform-style: inherit;
	  transform-style: inherit;
	  width: 100vw;
	}

	header, header:before { background: 50% 50% / cover; }

	header::before {
	  bottom: 0;
	  content: "";
	  left: 0;
	  position: absolute;
	  right: 0;
	  top: -150px;
	  display: block;
	  background-image: url(../../img/chapter01/parallax.jpg);
	  background-size: cover;
	  -webkit-transform-origin: center center 0;
	  -webkit-transform: translateZ(-1px) scale(2);
	  transform-origin: center center 0;
	  transform: translateZ(-1px) scale(2);
	  z-index: -1;
	  min-height: 50vh; 
	}

	header {
	  font-weight: normal;
	  letter-spacing: 0.1em;
	  text-align: center;
	  margin: 0;
	}

	.parallax-main {
	  background-color: $light-gray-l8;
	  line-height: 1.7;
	  max-width: 100%;
	  padding-top: 4em;
	  /*padding: 5% calc(50% - 16em) 35%;*/
	  position: relative;
	  z-index: 2;
	}
	    
	.arrow-down {
	  width: 0; 
	  height: 0; 
	  border-left: 30px solid transparent;
	  border-right: 30px solid transparent;
	  border-top: 30px solid $aqua-d2;
	  position: absolute;
	  top: 0;
	  left: 48%
	}
	.top-bar {
	  width: 100%;
	  height: 45px;
	}
}